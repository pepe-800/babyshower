    <!-- Confetti Container -->
    <div class="confetti-container" id="confettiContainer"></div>

    <script>
        // --- DOM Elements ---
        const babyImage = document.getElementById('babyImage');
        const imageUpload = document.getElementById('imageUpload');
        const confettiContainer = document.getElementById('confettiContainer');

        // --- Event Listeners ---

        // Allows users to click on the baby image to upload their own
        babyImage.addEventListener('click', () => {
            imageUpload.click(); // Trigger the hidden file input
        });

        // Handles image file selection
        imageUpload.addEventListener('change', (event) => {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    babyImage.src = e.target.result; // Set the uploaded image as the source
                };
                reader.readAsDataURL(file); // Read the file as a data URL
            }
        });

        // --- Functions ---

        /**
         * Handles the RSVP button click.
         * In a real application, this would redirect to an RSVP form or send an email.
         */
        function handleRsvpClick() {
            // Replace with your actual RSVP link or logic
            alert('Thank you for your interest! In a real app, this would take you to an RSVP form.');
            // Example: window.location.href = 'your-rsvp-form-link.html';
        }

        /**
         * Generates a random integer within a specified range.
         * @param {number} min - The minimum value (inclusive).
         * @param {number} max - The maximum value (inclusive).
         * @returns {number} A random integer.
         */
        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        /**
         * Generates a random color for confetti.
         * @returns {string} A hex color string.
         */
        function getRandomConfettiColor() {
            const colors = ['#FFD700', '#FF69B4', '#87CEEB', '#98FB98', '#FFB6C1', '#BA55D3', '#FF4500']; // Gold, Pink, Light Blue, Pale Green, Light Pink, Medium Orchid, Orange Red
            return colors[getRandomInt(0, colors.length - 1)];
        }

        /**
         * Creates and animates individual confetti particles.
         */
        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.classList.add('confetti');
            confetti.style.left = `${getRandomInt(0, 100)}vw`; // Random horizontal position
            confetti.style.setProperty('--confetti-color', getRandomConfettiColor());
            confetti.style.setProperty('--fall-duration', `${getRandomInt(5, 15)}s`); // Random fall duration
            confettiContainer.appendChild(confetti);

            // Remove confetti after it falls off screen to prevent DOM clutter
            confetti.addEventListener('animationend', () => {
                confetti.remove();
            });
        }

        // --- Initialization ---

        // Generate continuous confetti for a festive feel
        setInterval(createConfetti, 200); // Create a new confetti particle every 200ms

        // You can pre-fill the invitation details here if you want to make it dynamic
        document.addEventListener('DOMContentLoaded', () => {
            // Example of how to programmatically update content:
            // document.querySelector('header h2').textContent = 'to a Baby Shower for Jane & John Doe';
            // document.querySelector('.details p:nth-child(2)').textContent = 'Date: August 15, 2025';
            // document.querySelector('.details p:nth-child(3)').textContent = 'Time: 2:00 PM - 4:00 PM';
            // document.querySelector('.details p:nth-child(4)').textContent = 'Location: 123 Celebration Lane, Party Town, USA';
            // document.querySelector('.rsvp-section p').textContent = 'Kindly RSVP by August 1, 2025 so we can finalize the arrangements.';
        });

    </script>
